                        <input type="hidden" name="da" t-else="" id="da"/>
                        <t t-foreach="da_ids" t-as="da">
                            <li>
                                <input t-attf-id="da-#{da.id}" t-if="da_list and da.id in da_list" t-att-data-id="da.id" class="extra_facility_filter_checked da" type="checkbox" t-attf-value="0#{da.id}" checked="checked" />
                                <input t-attf-id="da-#{da.id}" t-else="" t-att-data-id="da.id" class="extra_facility_filter da" type="checkbox" t-attf-value="0#{da.id}"  />
